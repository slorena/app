<p>
  <strong>Title:</strong>
  <%= @feed.title %>
</p>
 
 <% @feed.products.each do |product| %>
  <p>
    <strong>Commenter:</strong>
    <%= product.price %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= product.title %>
  </p>

  <%= link_to image_tag(product.image.url(:thumb)), product.image.url %>
<% end %>

 <div class="comment">
		<%= render :partial=>@feed.reload.products %>
</div>

<div class='error'>
</div>
 

<p>
<h3>Add a product:</h3>
</p>
	<%= render "products/form"%>

