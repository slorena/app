<div class="page-title">
  <h1>All feeds</h1>
</div>

<% if @feeds.length == 0%>

  <p> No feed to display. </p>
  <%= link_to 'Create feed', new_feed_path, :class => "btn btn-success"  %> 

<% else %>

<table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Number of products</th>
      
      </tr>
    </thead>
    <tbody>
      <% @feeds.each do |feed| %>
    <tr>
      <td><%= feed.title %></td>
      <td><%= feed.products.count %></td>

      <td><%= link_to 'Show feed', feed_path(feed), :class => "btn btn-primary" %> </td>

      <td><%= link_to 'Delete feed',  feed,  method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"%> </td>
    </tr>
  <% end %>
    </tbody>
</table>

<% end %>
