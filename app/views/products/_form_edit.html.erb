<%= form_for([@feed, @product], :html => { :class => 'form-horizontal' } ) do |f| %>

  <div class="form-group">

    <%= f.label :title, :class => 'form-label' %>
    <div class="forms">
      <%= f.text_field :title%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Campaign_name, :class => 'form-label' %>
    <div class="control">
      <%= f.text_field :campaign %>
    </div>
  </div>

   <div class="form-group">
    <%= f.label :price, :class => 'form-label' %>
    <div class="control">
      <%= f.text_field :price %>
    </div>
  </div>

   <div class="form-group">
    <%= f.label :description, :class => 'form-label' %>
    <div class="control">
      <%= f.text_area :description, :row => 20, :cols => 50 %>
    </div>

   <div class="form-group">
    <div class="control">
      <%= f.file_field :image %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-success' %>
  </div>
  
  <% end %>