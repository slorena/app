<!DOCTYPE html>
<html>
<head>
  <title>ParaleApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
   <%= stylesheet_link_tag    'style', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'fonts', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


</head>
<body>

<nav role="navigation" class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <a class="navbar-brand" href="/">2performantApp</a>
        </div>
        <!-- Collection of nav links and other content for toggling -->
        <div id="navbarCollapse" class="collapse navbar-collapse">
        	<ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                    <li><%= link_to('Create feed', new_feed_path, :class => "line1_p") %> </li>
                    <li><%= link_to('Search product', '/products/search', :class => "line1_p") %> </li>
                    <li><%= link_to('All feeds', feeds_path, :class => "line1_p") %> </li>
                    <li><%= link_to('Logout', destroy_user_session_path, :method=>'delete', :class => "line1_p") %> </li>
                <%else%>
                    <li><%= link_to('Login', new_user_session_path, :class => "line1_p") %> </li>
                    <li><%= link_to('Register', new_user_registration_path, :class => "line1_p") %> </li>

                <%end%> 
            </ul>


        </div>
    </div>
</nav>

<div class='body-container'>
	<div class="container">
		<%= yield %>
	</div>
</div>

</body>
</html>
